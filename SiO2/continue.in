include "system.in.init"

read_restart SiO2.54000.restart

pair_style vashishta
include "system.in.settings"



variable N equal 3000

thermo 100
variable T equal 2200
restart ${N} SiO2.*.restart
label meltingLoop
variable i loop 3
    fix nvt all nvt temp ${T} ${T} 1.0
    run ${N}
    compute msdID all msd
    fix msdDump all ave/time 1 1 3 c_msdID[4] file msd_N${N}_T${T}.txt
    run ${N}
    uncompute msdID
    unfix nvt
    unfix msdDump
    variable T equal ${T}+200
next i
jump SELF meltingLoop
