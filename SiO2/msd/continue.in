include "system.in.init"

read_restart restartFiles/SiO2.20000.restart

#pair_style vashishta
include "system.in.settings"

variable N equal 20000
variable T equal 1500
variable P equal 1.01325
thermo 10000
restart ${N}+10000 restartFiles/SiO2.*.restart

label meltingLoop
variable i loop 11
    fix nvtID all nvt temp ${T} ${T} 1.0
    run ${N}
    compute msdID all msd
    fix msdDumpID all ave/time 1 1 3 c_msdID[4] file msd_N${N}_T${T}.txt
    run ${N}
    uncompute msdID
    unfix nvtID
    unfix msdDumpID
    variable T equal ${T}+50
next i
jump SELF meltingLoop
